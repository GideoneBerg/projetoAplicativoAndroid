<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Projeto" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/azulMarinho</item>
        <item name="colorPrimary">@color/azulEscuro</item>
    </style>

    <!-- Style for the custom RecyclerView scrollbar -->
    <style name="CustomRecyclerViewScrollbar">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
    </style>
    <style name="CustomRecyclerViewScrollbarBlue">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_blue</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
    </style>

    <style name="CustomRecyclerViewScrollbarRosa">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_rosa</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
    </style>

    <style name="AppCompat.TelaCheia" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/azulMarinho</item>
    </style>

    <style name="Theme.Projeto" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Other theme attributes -->
    </style>
</resources>
