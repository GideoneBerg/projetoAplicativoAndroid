<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context=".activity.ClienteActivity">


    <ImageView
        android:id="@+id/image_logo_cliente"
        android:layout_width="93dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo" />

    <TextView
        android:id="@+id/text_ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-thin"
        android:text="OlÃ¡"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_cliente" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="216dp"
        android:layout_height="81dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:textColor="@color/tiffany"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ola"
        tools:text="@string/text_nomeCliente" />

    <ImageView
        android:id="@+id/personCliente"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/personadd" />

    <TextView
        android:id="@+id/plano_atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="@string/planoAtual"
        app:layout_constraintEnd_toStartOf="@+id/vencimentoData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

    <TextView
        android:id="@+id/vencimentoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/vencimento"
        app:layout_constraintStart_toEndOf="@+id/plano_atual"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

    <TextView
        android:id="@+id/plano"
        android:layout_width="171dp"
        android:layout_height="122dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_plano_vencimento"
        android:gravity="center"
        android:text="@string/plano"
        android:textColor="@color/tiffany"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plano_atual" />

    <TextView
        android:id="@+id/vencimento"
        android:layout_width="171dp"
        android:layout_height="122dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_plano_vencimento"
        android:gravity="center"
        android:text="@string/vencimento"
        android:textColor="@color/tiffany"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/plano"
        app:layout_constraintTop_toBottomOf="@+id/vencimentoData" />

    <HorizontalScrollView
        android:id="@+id/menu_cliente"
        android:layout_width="346dp"
        android:layout_height="165dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plano"
        app:layout_constraintVertical_bias="0.234"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="horizontal">


            <Button
                android:id="@+id/centralCliente"
                android:layout_width="100dp"
                android:layout_height="147dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_botao_menu_cliente"
                android:drawableTop="@drawable/baseline_person_24"
                android:elevation="800dp"
                android:paddingLeft="10dp"
                android:paddingTop="40sp"
                android:paddingRight="10dp"
                android:paddingBottom="40dp"
                android:text="@string/central_cliente"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:translationZ="50dp" />

            <Button
                android:id="@+id/segunda_via"
                android:layout_width="100dp"
                android:layout_height="147dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_botao_menu_cliente"
                android:drawableTop="@drawable/baseline_view_column_24"
                android:paddingLeft="10dp"
                android:paddingTop="40sp"
                android:paddingRight="10dp"
                android:paddingBottom="40dp"
                android:text="@string/segunda_via"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/pagamento_pix"
                android:layout_width="100dp"
                android:layout_height="147dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_botao_menu_cliente"
                android:drawableTop="@drawable/baseline_pix_24"
                android:paddingLeft="10dp"
                android:paddingTop="40sp"
                android:paddingRight="10dp"
                android:paddingBottom="40dp"
                android:shadowRadius="0"
                android:text="@string/pagamento_pix"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/testeVelocidade"
                android:layout_width="100dp"
                android:layout_height="147dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/background_botao_menu_cliente"
                android:drawableTop="@drawable/baseline_network_check_24"
                android:paddingLeft="10dp"
                android:paddingTop="40sp"
                android:paddingRight="10dp"
                android:paddingBottom="40dp"
                android:shadowRadius="0"
                android:text="@string/teste_velocidade"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sobre"
                android:layout_width="100dp"
                android:layout_height="147dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_botao_menu_cliente"
                android:drawableTop="@drawable/baseline_info_24"
                android:paddingLeft="10dp"
                android:paddingTop="40sp"
                android:paddingRight="10dp"
                android:paddingBottom="40dp"
                android:shadowRadius="0"
                android:text="@string/sobre"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />
        </LinearLayout>

    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/site"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background_menu_rede_sociais"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/samsung_internet" />

    <ImageButton
        android:id="@+id/whatsapp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background_menu_rede_sociais"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/site"
        app:srcCompat="@drawable/whatsapp" />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background_menu_rede_sociais"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/whatsapp"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/instagram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background_menu_rede_sociais"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/facebook"
        app:srcCompat="@drawable/instagram" />

    <Button
        android:id="@+id/maisDados"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_botao"
        android:text="@string/maisDados"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plano" />


</androidx.constraintlayout.widget.ConstraintLayout>