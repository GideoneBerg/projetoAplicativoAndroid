<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    tools:context=".activity.activitys.ClienteActivity">


    <ImageView
        android:id="@+id/image_logo_cliente"
        android:layout_width="112dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:text="TextView"
        android:textColor="@color/tiffany"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ola"
        tools:text="@string/text_nomeCliente" />

    <TextView
        android:id="@+id/text_ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="88dp"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:text="OlÃ¡"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <ImageView-->
<!--        android:id="@+id/personCliente"-->
<!--        android:layout_width="115dp"-->
<!--        android:layout_height="115dp"-->
<!--        android:layout_marginStart="32dp"-->
<!--        android:layout_marginTop="92dp"-->
<!--        android:elevation="2dp"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:srcCompat="@drawable/personadd" />-->

    <HorizontalScrollView
        android:id="@+id/menu_cliente"
        android:layout_width="345dp"
        android:layout_height="133dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maisDados"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:fontFamily="@font/abel"
            android:orientation="horizontal">


            <Button
                android:id="@+id/centralCliente"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_botao1"
                android:drawableTop="@drawable/baseline_person_white"
                android:elevation="2dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="10dp"
                android:paddingTop="30sp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp"
                android:text="@string/central_cliente"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:translationZ="50dp" />

            <Button
                android:id="@+id/segunda_via"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_botao1"
                android:drawableTop="@drawable/baseline_view_column_24"
                android:elevation="2dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="10dp"
                android:paddingTop="30sp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp"
                android:text="@string/segunda_via"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/pagamento_pix"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_botao1"
                android:drawableTop="@drawable/baseline_pix_24"
                android:elevation="2dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="10dp"
                android:paddingTop="30sp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp"
                android:shadowRadius="0"
                android:text="@string/pagamento_pix"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/testeVelocidade"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:background="@drawable/background_botao1"
                android:drawableTop="@drawable/baseline_network_check_24"
                android:elevation="2dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="10dp"
                android:paddingTop="30sp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp"
                android:shadowRadius="0"
                android:text="@string/teste_velocidade"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/sobre"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/background_botao1"
                android:drawableTop="@drawable/baseline_info_24"
                android:elevation="2dp"
                android:fontFamily="@font/abel"
                android:paddingLeft="10dp"
                android:paddingTop="30sp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp"
                android:shadowRadius="0"
                android:text="Sobre Apc - Tecnolgia"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/background_botao_menu_cliente"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/whatsapp"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/instagram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/background_botao_menu_cliente"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/facebook"
        app:srcCompat="@drawable/instagram" />

    <ImageButton
        android:id="@+id/whatsapp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/background_botao_menu_cliente"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/site"
        app:srcCompat="@drawable/whatsapp_white" />

    <ImageButton
        android:id="@+id/site"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/background_botao_menu_cliente"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/samsung_internet" />

    <Button
        android:id="@+id/maisDados"
        android:layout_width="184dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_botao_token"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:text="@string/maisDados"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vencimento" />

    <TextView
        android:id="@+id/plano"
        android:layout_width="184dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_botao1"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="@string/plano"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plano_atual" />

    <TextView
        android:id="@+id/vencimentoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="@string/vencimento"
        android:textColor="@color/azulAnil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plano" />

    <TextView
        android:id="@+id/vencimento"
        android:layout_width="184dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_botao1"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="@string/vencimento"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vencimentoData" />

    <TextView
        android:id="@+id/plano_atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:gravity="center"
        android:text="@string/planoAtual"
        android:textColor="@color/azulAnil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="414dp"
        android:layout_height="931dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/objeto10" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="211dp"
        android:layout_height="597dp"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_cliente"
        app:srcCompat="@drawable/boneca"
        tools:layout_editor_absoluteX="-24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>