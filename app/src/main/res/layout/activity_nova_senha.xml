<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context=".activity.activitys.NovaSenhaActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="15dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btnNovaSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="335dp"
        android:layout_height="303dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_marketing1" />

    <TextView
        android:id="@+id/verifique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/verifique_email"
        android:textAlignment="gravity"
        android:textColor="@color/amarelo"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/linkemail"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_email_amarelo"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:text="EMAIL"
        android:textColor="@color/amarelo"
        android:textColorHighlight="@color/amarelo"
        android:textColorHint="@color/amarelo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailtoken"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/textToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:drawablePadding="10dp"
        android:elevation="2dp"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/text_token"
        android:textColor="@color/azulAnil"
        android:textColorHighlight="@color/azulAnil"
        android:textColorHint="@color/azulAnil"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linkemail"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/textnovaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:drawablePadding="10dp"
        android:elevation="2dp"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/nova_senha"
        android:textColor="@color/azulAnil"
        android:textColorHighlight="@color/azulAnil"
        android:textColorHint="@color/azulAnil"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pin_view"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/emailtoken"
        android:layout_width="230dp"
        android:layout_height="49dp"
        android:fontFamily="@font/assistant_extralight"
        android:text="@string/email_token"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifique" />


    <ImageView
        android:id="@+id/objetosenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/objeto1" />

    <!--    android:hint="@string/nova_senha"-->

    <EditText
        android:id="@+id/novaSenha"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/background_texto1"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/azulAnil"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textnovaSenha"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNovaSenha"
        android:layout_width="86dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_botao1"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/enviar"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novaSenha" />


    <com.chaos.view.PinView
        android:id="@+id/pin_view"
        style="@style/PinWidget.PinView"
        android:layout_width="265dp"
        android:layout_height="65dp"
        android:layout_below="@+id/verify_text_6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:elevation="10dp"
        android:inputType="number"
        android:itemBackground="@drawable/background_texto1"
        android:textColor="@color/azulAnil"
        app:lineColor="@color/white"
        android:textSize="20sp"
        app:itemCount="6"
        app:itemHeight="60dp"
        app:itemRadius="10dp"
        app:itemSpacing="5dp"
        app:itemWidth="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textToken"
        app:viewType="rectangle"
        tools:ignore="MissingConstraints,UnknownId">


    </com.chaos.view.PinView>


</androidx.constraintlayout.widget.ConstraintLayout>