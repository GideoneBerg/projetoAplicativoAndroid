<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context=".activity.NovaSenhaActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="15dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="335dp"
        android:layout_height="303dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_marketing" />

    <TextView
        android:id="@+id/verifique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_black"
        android:text="@string/verifique_email"
        android:textAlignment="gravity"
        android:textColor="#FDF8F8"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/linkemail"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_email_amarelo"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:fontFamily="@font/abel"
        android:text="EMAIL"
        android:textColor="@color/amarelo"
        android:textColorHighlight="@color/amarelo"
        android:textColorHint="@color/amarelo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailtoken"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/textToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:drawablePadding="10dp"
        android:elevation="2dp"
        android:fontFamily="@font/archivo_black"
        android:text="@string/text_token"
        android:textColor="@color/rosa"
        android:textColorHighlight="@color/azulAnil"
        android:textColorHint="@color/azulAnil"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linkemail"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/textnovaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:elevation="2dp"
        android:fontFamily="@font/archivo_black"
        android:text="@string/nova_senha"
        android:textColor="@color/azulAnil"
        android:textColorHighlight="@color/azulAnil"
        android:textColorHint="@color/azulAnil"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <com.santalu.maskara.widget.MaskEditText
        android:id="@+id/otp"
        android:layout_width="313dp"
        android:layout_height="51dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/background_token"
        android:drawablePadding="6dp"
        android:elevation="3dp"
        android:ems="6"
        android:fontFamily="@font/abel"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textToken"
        app:mask="_         _         _         _         _         _"
        app:maskCharacter="_"
        app:maskStyle="completable"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/emailtoken"
        android:layout_width="230dp"
        android:layout_height="49dp"
        android:fontFamily="@font/assistant_extralight"
        android:text="@string/email_token"
        android:textAlignment="center"
        android:textColor="#FDF8F8"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifique" />


    <ImageView
        android:id="@+id/objetosenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/objeto1" />

    <!--    android:hint="@string/nova_senha"-->

    <EditText
        android:id="@+id/novaSenha"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/background_botao1"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"

        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textnovaSenha"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/btnNovaSenha"
        android:layout_width="86dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_botao1"
        android:elevation="2dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/enviar"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novaSenha" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="37dp"
        android:layout_height="56dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textToken"
        app:srcCompat="@drawable/background_quadrado_token" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="37dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:srcCompat="@drawable/background_quadrado_token" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="37dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/background_quadrado_token" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="37dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:srcCompat="@drawable/background_quadrado_token" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="37dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:srcCompat="@drawable/background_quadrado_token" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="37dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:srcCompat="@drawable/background_quadrado_token" />

</androidx.constraintlayout.widget.ConstraintLayout>